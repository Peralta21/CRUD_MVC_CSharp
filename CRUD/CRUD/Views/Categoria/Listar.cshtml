@model List<CategoriaModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Lista Categorias
  </div>
  <div class="card-body">
    <a asp-action="Guardar" asp-controller="Categoria" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Agregar</a>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.nIdCategori</td>
                        <td>@item.cNombCateg</td>
                        <td>@item.cEsActiva</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Categoria" class="btn btn-primary btn-sm" asp-route-idCategoria="@item.nIdCategori"> <i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Eliminar" asp-controller="Categoria" class="btn btn-danger btn-sm" asp-route-idCategoria="@item.nIdCategori"> <i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
  </div>
</div>


